<body>
    <div class="nav-bar">
        <div class="nav-container">
            <div class="logo-div">
                <a href="/api/worker/home" class="logotext">Find My Worker</a>
            </div>
            <nav class="nav-content">
                <div class="nav-menu">
                    <a href="/api/worker/home" class="nav-link" style="color:#710101;"><b>Home</b></a>
                    <a href="/api/worker/profile" class="nav-link">My Profile</a>
                </div>
                <div class="nav-cta-button-container">
                    <a href="/api/worker/logout" class="cta-button">Log Out</a>
                </div>
            </nav>
        </div>
    </div>

    <div class="main-content">
        <div class="container">
            <h1>Welcome, <%= worker.name %>!</h1>

            <% if (worker.isVerify) { %>
                <!-- Search and Filter Form -->
                <form action="/api/worker/home" method="GET" class="search-form" style="margin-bottom: 20px;">
                    <label for="category">Search by Category:</label>
                    <select name="category" id="category">
                        <option value="">All</option>
                        <option value="Plumbing" <%= category === 'Plumbing' ? 'selected' : '' %>>Plumbing</option>
                        <option value="Electrical" <%= category === 'Electrical' ? 'selected' : '' %>>Electrical</option>
                        <option value="Painting" <%= category === 'Painting' ? 'selected' : '' %>>Painting</option>
                        <option value="Carpentry" <%= category === 'Carpentry' ? 'selected' : '' %>>Carpentry</option>
                        <option value="Cleaning" <%= category === 'Cleaning' ? 'selected' : '' %>>Cleaning</option>
                        <option value="Other" <%= category === 'Other' ? 'selected' : '' %>>Other</option>
                    </select>
                    <button type="submit">Search</button>
                </form>

                <!-- Task Application Filter -->
                <form action="/api/worker/home" method="GET" class="filter-form" style="margin-bottom: 20px;">
                    <label for="filter">Filter by Application Status:</label>
                    <select name="filter" id="filter" onchange="this.form.submit()">
                        <option value="" <%= selectedFilter === '' ? 'selected' : '' %>>All Tasks</option>
                        <option value="applied" <%= selectedFilter === 'applied' ? 'selected' : '' %>>Applied Tasks</option>
                        <option value="unapplied" <%= selectedFilter === 'unapplied' ? 'selected' : '' %>>Unapplied Tasks</option>
                    </select>
                </form>

                <h2>Tasks Available!</h2>
                <% if (tasks.length === 0) { %>
                    <p class="error">No tasks available yet.</p>
                <% } else { %>
                    <% tasks.forEach(task => { %>
                        <div class="card">
                            <h3><%= task.title %></h3>
                            <p><%= task.description %></p>
                            <p><b>Category:</b> <%= task.category %></p>
                            <a href="/api/worker/task/<%= task._id %>/view" class="button w-button">View Details</a>
                            <% if (task.intrestedWorkers.includes(worker._id)) { %>
                                <button class="cta-button" style="background-color: gray;" disabled>Already Applied</button>
                            <% } else { %>
                                <form action="/api/worker/task/<%= task._id %>/apply" method="POST">
                                    <button type="submit" class="cta-button">Apply for Task</button>
                                </form>
                            <% } %>
                        </div>
                    <% }) %>
                <% } %>
            <% } else { %>
                <div class="error">
                    <p><b>You are not verified yet.</b></p>
                    <p>Please contact admin for verification to access tasks.</p>
                    <p>Admin's Contact - 9999999999</p>
                </div>
            <% } %>
        </div>
    </div>    
</body>
</html>