<body>
    <div class="nav-bar">
        <div class="nav-container">
            <div class="logo-div">
                <a href="/api/admin/dashboard" class="logotext"><b>Find My Worker</b></a>
            </div>
            <nav class="nav-content">
                <div class="nav-menu">
                    <a href="/api/admin/dashboard" class="nav-link">Dashboard</a>
                    <a href="/api/admin/workers" class="nav-link"><b>Workers</b></a>
                    <a href="/api/admin/clients" class="nav-link">Clients</a>
                    <a href="/api/admin/pairing" class="nav-link">Tasks</a>
                </div>
                <div class="nav-cta-button-container">
                    <a href="/api/admin/logout" class="cta-button">Logout</a>
                </div>
            </nav>
        </div>
    </div>

    <div class="container">
        <h1>Listed Workers</h1>
        <form method="GET" action="/api/admin/workers">
            <input type="text" name="search" placeholder="Search by name , mobile number or category" style="width: 400px; padding: 8px;" />
            <button type="submit">Search</button>
        </form>    

        <table class="styled-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Verified</th>
                </tr>
            </thead>
            <tbody>
                <% workers.forEach(worker => { %>
                    <tr>
                        <td>
                            <a href="/api/admin/worker/<%= worker._id %>" style="color: #007bff; text-decoration: underline;">
                                <%= worker.name %>
                            </a>
                        </td>
                        <td><%= worker.email %></td>
                        <td><%= worker.phone %></td>
                        <td>
                            <form action="/api/admin/worker/<%= worker._id %>/verify" method="POST">
                              <!-- <select name="isVerify" onchange="this.form.submit()">
                                <option value="true" <%= worker.isVerify ? 'selected' : '' %>>Yes</option>
                                <option value="false" <%= !worker.isVerify ? 'selected' : '' %>>No</option>
                              </select> -->
                              <!-- <select name="isVerify" onchange="updateVerify(this, '<%= worker._id %>')" class="verify-select">
                                <option value="true" <%= worker.isVerify ? 'selected' : '' %>>Yes</option>
                                <option value="false" <%= !worker.isVerify ? 'selected' : '' %>>No</option>
                              </select> -->
                              <select onchange="updateVerify(this, '<%= worker._id %>')">
                                <option value="true" <%= worker.isVerify ? 'selected' : '' %>>Yes</option>
                                <option value="false" <%= !worker.isVerify ? 'selected' : '' %>>No</option>
                              </select>
                              
                            </form>
                            <!-- <script>
                                async function updateVerify(selectElement, workerId) {
                                  const value = selectElement.value;
                              
                                  try {
                                    const res = await fetch(`/api/admin/worker/${workerId}/verify`, {
                                      method: 'POST',
                                      headers: {
                                        'Content-Type': 'application/json'
                                      },
                                      credentials: 'include', // 🔥 THIS sends the cookie!
                                      body: JSON.stringify({ isVerify: value })
                                    });
                              
                                    if (res.redirected) {
                                      window.location.href = res.url;
                                    } else if (res.ok) {
                                      location.reload(); // optional: refresh to reflect changes
                                    } else {
                                      alert('Failed to update verification.');
                                    }
                                  } catch (err) {
                                    console.error('Error updating verification:', err);
                                  }
                                }
                              </script> -->
                              <script>
                                async function updateVerify(selectElement, workerId) {
                                  const value = selectElement.value;
                              
                                  try {
                                    const res = await fetch(`/api/admin/worker/${workerId}/verify`, {
                                      method: 'POST',
                                      headers: {
                                        'Content-Type': 'application/json'
                                      },
                                      credentials: 'include', // 👈 Important! Ensures JWT cookie is sent.
                                      body: JSON.stringify({ isVerify: value })
                                    });
                              
                                    if (res.redirected) {
                                      window.location.href = res.url;
                                    } else if (res.ok) {
                                      window.location.reload(); // optional reload
                                    } else {
                                      const err = await res.text();
                                      alert('Failed to update: ' + err);
                                    }
                                  } catch (err) {
                                    console.error('Update error:', err);
                                  }
                                }
                              </script>
                              
                          </td>                          
                    </tr>
                <% }) %>
            </tbody>
                        
        </table>
    </div>
</body>
</html>
