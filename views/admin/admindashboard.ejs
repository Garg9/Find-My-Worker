    <div class="nav-bar">
        <div class="nav-container">
            <div class="logo-div">
                <a href="/" class="logotext"><b>Find My Worker</b></a>
            </div>
            <nav class="nav-content">
                <div class="nav-menu">
                    <a href="/api/admin/dashboard" class="nav-link">Dashboard</a>
                    <a href="/api/admin/workers" class="nav-link">Workers</a>
                    <a href="/api/admin/clients" class="nav-link">Clients</a>
                    <a href="/api/admin/pairing" class="nav-link">Tasks</a> <!-- Tasks button added -->
