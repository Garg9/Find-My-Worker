                        <p><%= clientsCount %></p>
                        <a href="/api/admin/clients" class="button">View Clients</a>
                    </div>
                    <div class="dashboard-box">
                        <h2>Tasks</h2>
                        <p><%= tasksCount %></p>
                        <a href="/api/admin/pairing" class="button">View Tasks</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
