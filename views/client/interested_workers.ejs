 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Interested Workers - Find My Worker</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/styles.css" rel="stylesheet" type="text/css" />
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .nav-bar {
      background-color: #333;
      padding: 10px 0;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .nav-container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }

    .logotext {
      color: white;
      text-decoration: none;
      font-size: 24px;
      font-weight: bold;
    }

    .nav-content {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .nav-menu {
      display: flex;
      align-items: center;
      gap: 25px;
    }

    .nav-link {
      color: white;
      text-decoration: none;
      font-size: 16px;
      padding: 8px 12px;
      transition: color 0.3s;
    }

    .nav-link:hover {
      color: #007bff;
    }

    .cta-button {
      background-color: #007bff;
      padding: 8px 15px;
      border-radius: 5px;
      color: white;
      text-decoration: none;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    .cta-button:hover {
      background-color: #0056b3;
    }

    .main-content {
      flex: 1;
      display: flex;
      justify-content: center;
      padding: 40px 20px;
    }

    .container {
      background-color: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      max-width: 700px;
      width: 100%;
    }

    h2 {
      color: #333;
      text-align: center;
      margin-bottom: 20px;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      padding: 10px 0;
      border-bottom: 1px solid #ddd;
      color: #555;
    }

    .back-btn {
      display: inline-block;
      margin-top: 20px;
      text-align: center;
      width: 100%;
    }

    .no-workers {
      text-align: center;
      color: #888;
      margin-top: 20px;
    }

    @media (max-width: 768px) {
      .nav-container {
        flex-direction: column;
        padding: 10px;
      }

      .nav-content {
        margin-top: 10px;
        flex-direction: column;
        gap: 15px;
      }

      .nav-menu {
        flex-direction: column;
        gap: 10px;
      }

      .cta-button {
        width: 100%;
        text-align: center;
      }

      .container {
        padding: 20px;
        max-width: 90%;
      }
    }
  </style>
</head>
<body>
  <div class="nav-bar">
    <div class="nav-container">
      <a href="/api/client/home" class="logotext">Find My Worker</a>
      <nav class="nav-content">
        <div class="nav-menu">
          <a href="/api/client/home" class="nav-link">Home</a>
          <a href="/api/client/myrequests" class="nav-link">My Requests</a>
          <a href="/api/client/profile" class="nav-link">My Profile</a>
        </div>
        <div class="nav-cta-button-container">
          <a href="/api/client/logout" class="cta-button">Log Out</a>
        </div>
      </nav>
    </div>
  </div>

  <div class="main-content">
    <div class="container">
      <h2>Interested Workers for: <%= task.title %></h2>
      
      <% if (task.intrestedWorkers.length === 0) { %>
        <p class="no-workers">No workers have applied yet.</p>
      <% } else { %>
        <ul>
          <% task.intrestedWorkers.forEach(worker => { %>
            <li><strong><%= worker.name %></strong> — <%= worker.phone %> — <%= worker.jobCategory %></li>
          <% }) %>
        </ul>
      <% } %>

      <div class="back-btn">
        <a href="/api/client/myrequests" class="cta-button">← Back</a>
      </div>
    </div>
  </div>
</body>
</html>
